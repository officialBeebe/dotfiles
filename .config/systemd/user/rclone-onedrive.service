[Unit]
Description=Rclone mount for OneDrive
AssertPathIsDirectory=%h/.remote/OneDrive
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount \
	OneDrive: %h/.remote/OneDrive \
	--config=%h/.config/rclone/rclone.conf \
	--vfs-cache-mode writes \
	--allow-other \
	--log-level INFO
ExecStop=/bin/fusermount -u %h/.remote/OneDrive
Restart=on-failure
RestartSec=10

[Install]
WantedBy=default.target
